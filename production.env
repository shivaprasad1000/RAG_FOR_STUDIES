# Study Assistant RAG System - Production Environment Configuration
# Copy this file to .env and customize for your deployment

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# OpenAI Configuration (Optional - for enhanced answers)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Text Processing Configuration
CHUNK_SIZE=800
CHUNK_OVERLAP=100
MAX_FILE_SIZE_MB=50

# Database Configuration
DATABASE_PATH=data/study_assistant.db
VECTOR_INDEX_PATH=data/faiss_index

# Performance Configuration
MAX_CHUNKS_PER_QUERY=10
DEFAULT_MAX_CHUNKS=3
QUERY_TIMEOUT_SECONDS=30

# Security Configuration (if implementing authentication)
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/study_assistant.log

# CORS Configuration
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# Feature Flags
ENABLE_DOCUMENT_TAGGING=true
ENABLE_STUDY_PREFERENCES=true
ENABLE_ANSWER_FORMATTING=true